{
  "compilerOptions": {
    "target": "es2022",
    "module": "CommonJS",
    // "moduleResolution": "node",

    "rootDir": ".",
    "outDir": "dist",

    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,

    "types": ["node"],
    "lib": ["ES2020"],

    "sourceMap": true
  },
  "include": ["**/*.ts"],
  "exclude": ["node_modules", "dist"]
}
